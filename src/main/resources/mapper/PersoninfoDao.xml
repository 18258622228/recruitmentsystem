<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.igeek.rs.dao.PersoninfoDao">

    <resultMap type="com.igeek.rs.entity.Personinfo" id="PersoninfoMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userid" column="userId" jdbcType="INTEGER"/>
        <result property="jobid" column="jobId" jdbcType="INTEGER"/>
        <result property="companyid" column="companyId" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PersoninfoMap">
        select
          id, userId, jobId, companyId
        from recruitmentsystem.personinfo
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PersoninfoMap">
        select
          id, userId, jobId, companyId
        from recruitmentsystem.personinfo
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="PersoninfoMap">
        select
          id, userId, jobId, companyId
        from recruitmentsystem.personinfo
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userid != null">
                and userId = #{userid}
            </if>
            <if test="jobid != null">
                and jobId = #{jobid}
            </if>
            <if test="companyid != null">
                and companyId = #{companyid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into recruitmentsystem.personinfo(userId, jobId, companyId)
        values (#{userid}, #{jobid}, #{companyid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update recruitmentsystem.personinfo
        <set>
            <if test="userid != null">
                userId = #{userid},
            </if>
            <if test="jobid != null">
                jobId = #{jobid},
            </if>
            <if test="companyid != null">
                companyId = #{companyid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from recruitmentsystem.personinfo where id = #{id}
    </delete>

</mapper>